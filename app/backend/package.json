{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint --config ./config/.eslintrc ./src/**/*.ts",
    "prebuild": "npx rimraf ./dist",
    "build": "tsc --project ./config/tsconfig.json",
    "test": "cross-env LOGGER_LOG_LEVEL=warn TS_NODE_PROJECT='./config/tsconfig.json' mocha --config ./config/.mocharc.json './src/**/*.spec.ts'",
    "start": "cross-env TS_NODE_PROJECT='./config/tsconfig.json' node --inspect=7000 --loader ts-node/esm --es-module-specifier-resolution=node ./src/serve.ts",
    "push": "npm install && npm run lint && cross-env MODE=production npm run build && npm run test && git push --follow-tags",
    "start:prod": "node --es-module-specifier-resolution=node ./dist/serve.js",
    "migrations:prod": "node --es-module-specifier-resolution=node ./dist/migrations.js",
    "build:image": "docker compose -f ./config/docker-compose.yml -p home-automation-backend build",
    "start:image": "docker compose -f ./config/docker-compose.yml -p home-automation-backend up api"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "moment": "^2.30.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "supertest": "^7.1.4",
    "typescript": "^5.8.3"
  },
  "type": "module"
}
