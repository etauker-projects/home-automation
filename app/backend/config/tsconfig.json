{
    "compilerOptions": {
        "moduleResolution": "nodenext",
        "module": "nodenext",
        "target": "es2017",
        "lib": [
            "ES2021.String"
        ],
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "../dist"
    },
    "include": [
        "./../src/**/*"
    ],
    "exclude": [
        "./../src/**/*.spec.ts",
        "./../src/**/*.spec.js"
    ],
    "types": [
        "node",
        "mocha"
    ]
}